<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="600dp"
    android:padding="24dp"
    android:clipToPadding="false"
    android:background="@color/md_theme_inversePrimary_mediumContrast">

    <View
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:background="@drawable/circle_shape_white"
        android:translationX="-40dp"
        android:translationY="100dp"
        android:elevation="2dp" />
    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_shape_white"
        android:translationX="-60dp"
        android:translationY="400dp"
        android:elevation="2dp" />
    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_shape_white"
        android:translationX="190dp"
        android:translationY="250dp"
        android:elevation="2dp" />
    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_shape_white"
        android:translationX="220dp"
        android:translationY="60dp"
        android:elevation="2dp" />
    <View
        android:layout_width="99dp"
        android:layout_height="103dp"
        android:background="@drawable/circle_shape_white"
        android:translationX="160dp"
        android:translationY="0dp"
        android:elevation="2dp" />



        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_logo_principal_foreground"
            android:layout_marginBottom="16dp"
            android:elevation="8dp" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp"
            android:elevation="30dp"
            android:layout_marginTop="200dp"/>

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="253dp"
        android:layout_height="103dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="8dp"
        android:elevation="30dp"
        android:hint="DescripciÃ³n"
        android:inputType="textMultiLine"
        android:lines="3" />

    <EditText
            android:id="@+id/editPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"
            android:elevation="30dp"
            android:layout_marginTop="400dp"/>

    <LinearLayout
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:elevation="8dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/md_theme_primary"
            android:layout_marginLeft="10dp"
            android:text="Cancelar" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/md_theme_primary"
            android:text="Guardar" />
    </LinearLayout>

</FrameLayout>
